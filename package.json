    "accept-language": "^3.0.18",
    "autoprefixer": "^10.4.2",
    "axios": "^0.26.0",
    "classnames": "^2.3.1",
    "dayjs": "^1.10.8",
    "debug": "^4.3.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "fs-extra": "^10.0.1",
    "http-status-codes": "^2.2.0",
    "latinize": "^0.5.0",
    "lodash": "^4.17.21",
    "next": "^12.3.1",
    "next-mdx-remote": "^4.1.0",
    "next-translate": "^1.6.0",
    "nprogress": "^0.2.0",
    "octokit": "^1.7.1",
    "postcss": "^8.4.8",
    "postcss-animation": "^0.0.12",
    "postcss-calc": "^8.2.4",
    "postcss-custom-media": "^8.0.0",
