{
  "name": "ota-contribution-tool",
  "version": "1.25.0",
  "prettier": "prettier-config-ambanum",
  "scripts": {
    "dev": "NODE_OPTIONS=\"--insecure-http-parser --max-http-header-size=24576 \" ts-node src/server/index.mjs",
    "build": "next build",
    "start": "NODE_ENV=production node dist/src/server/index.mjs",
    "type-check": "tsc",
    "update-cookie-extension": "src/modules/Scraper/i-dont-care-about-cookies/tools/copy-to-folder.sh",
    "encrypt": "grep -rL \"ANSIBLE\" ./ops/roles/*/files/{.env.*.*,.env.*}/.env.secrets| sort -u  | xargs ansible-vault encrypt",
    "decrypt": "grep -rl \"ANSIBLE\" ./ops/roles/*/files/{.env.*.*,.env.*}/.env.secrets| sort -u  | xargs ansible-vault decrypt",
    "deploy:vagrant": "ansible-playbook ops/site.yml -i ops/inventories/dev.yml --limit vagrant -vvv",
    "deploy:preproduction": "ansible-playbook ops/site.yml -i ops/inventories/production.yml --diff --limit preproduction -v",
    "deploy:production": "ansible-playbook ops/site.yml -i ops/inventories/production.yml --limit '!preproduction' -v",
    "test": "jest",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@opentermsarchive/engine": "^2.5.0",
    "@opentermsarchive/terms-types": "^1.4.0",
